<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_one2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_one3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.16" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_three2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_two2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_two3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_two4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.89" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_two5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@xml/translucent"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@id/h_two"
        app:layout_constraintLeft_toLeftOf="@+id/v_one"
        app:layout_constraintRight_toRightOf="@id/v_two"
        android:autofillHints=""
        app:layout_constraintTop_toTopOf="@id/h_one" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/search"
        app:layout_constraintBottom_toBottomOf="@id/h_two"
        app:layout_constraintLeft_toLeftOf="@id/v_one2"
        app:layout_constraintRight_toRightOf="@+id/v_one3"
        app:layout_constraintTop_toTopOf="@id/h_one" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/check"
        app:layout_constraintBottom_toBottomOf="@id/h_two"
        app:layout_constraintLeft_toLeftOf="@id/v_two"
        app:layout_constraintRight_toRightOf="@+id/v_three"
        app:layout_constraintTop_toTopOf="@id/h_one"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        app:layout_goneMarginLeft="7dp"
        android:layout_marginLeft="9dp"/>


    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关注"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/h_two2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_2"
        app:layout_constraintTop_toTopOf="@+id/h_two"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/h_two2"
        app:layout_constraintLeft_toRightOf="@id/tv_1"
        app:layout_constraintRight_toLeftOf="@id/tv_3"
        app:layout_constraintTop_toTopOf="@+id/h_two" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热榜"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/h_two2"
        app:layout_constraintLeft_toRightOf="@id/tv_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h_two" />


    <HorizontalScrollView
        android:id="@+id/hsv_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/h_two3"
        app:layout_constraintLeft_toLeftOf="@id/v_one"
        app:layout_constraintRight_toRightOf="@id/v_three"
        app:layout_constraintTop_toTopOf="@id/h_two2"
        app:layout_constrainedHeight="true"
        android:layout_marginRight="48dp"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tem1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:width="80dp"
                android:background="@xml/translucent2"
                android:gravity="center"
                android:text="全站"
                android:textColor="#007BFF"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tem2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="10dp"
                android:width="80dp"
                android:background="@xml/translucent1"
                android:gravity="center"
                android:text="自然"
                android:textColor="#B6B6B6"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tem3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:width="80dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@xml/translucent1"
                android:text="数码"
                android:textColor="#B6B6B6"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tem4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="10dp"
                android:width="80dp"
                android:background="@xml/translucent1"
                android:gravity="center"
                android:text="科学"
                android:textColor="#B6B6B6"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tem5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:width="80dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@xml/translucent1"
                android:text="体育"
                android:textColor="#B6B6B6"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tem6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:width="80dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@xml/translucent1"
                android:text="人文"
                android:textColor="#B6B6B6"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tem7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="10dp"
                android:width="80dp"
                android:background="@xml/translucent1"
                android:gravity="center"
                android:text="历史"
                android:textColor="#B6B6B6"
                android:textSize="16dp" />

        </LinearLayout>


    </HorizontalScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:background="@drawable/add"
        app:layout_constraintLeft_toLeftOf="@id/v_two"
        app:layout_constraintRight_toRightOf="@id/v_three2"
        app:layout_constraintTop_toTopOf="@id/h_two2"
        app:layout_constraintBottom_toBottomOf="@+id/h_two3"
        app:layout_constrainedWidth="true"
        />



        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home"
            app:layout_constraintRight_toLeftOf="@id/iv_2"
            app:layout_constraintTop_toTopOf="@id/h_two4"
            app:layout_constraintBottom_toBottomOf="@id/h_two5"
            app:layout_constraintLeft_toLeftOf="@+id/v_one"
            app:layout_constraintVertical_chainStyle="spread_inside"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="#444444"
            app:layout_constraintLeft_toLeftOf="@+id/iv_1"
            app:layout_constraintRight_toRightOf="@+id/iv_1"
            app:layout_constraintTop_toBottomOf="@+id/iv_1"/>

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/member"
        app:layout_constraintBottom_toBottomOf="@id/h_two5"
        app:layout_constraintLeft_toRightOf="@id/iv_1"
        app:layout_constraintRight_toLeftOf="@+id/iv_3"
        app:layout_constraintTop_toTopOf="@id/h_two4"
        app:layout_constraintVertical_bias="0.460" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会员"
        android:textColor="#444444"
        app:layout_constraintLeft_toLeftOf="@+id/iv_2"
        app:layout_constraintRight_toRightOf="@+id/iv_2"
        app:layout_constraintTop_toBottomOf="@+id/iv_2"/>

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_blue"
            app:layout_constraintTop_toTopOf="@id/h_two4"
            app:layout_constraintBottom_toBottomOf="@id/h_two5"
            app:layout_constraintLeft_toRightOf="@id/iv_2"
            app:layout_constraintRight_toLeftOf="@id/iv_4"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constrainedHeight="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notice"
            app:layout_constraintTop_toTopOf="@id/h_two4"
            app:layout_constraintBottom_toBottomOf="@id/h_two5"
            app:layout_constraintLeft_toRightOf="@id/iv_3"
            app:layout_constraintRight_toLeftOf="@id/iv_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知"
            android:textColor="#444444"
            app:layout_constraintLeft_toLeftOf="@+id/iv_4"
            app:layout_constraintRight_toRightOf="@+id/iv_4"
            app:layout_constraintTop_toBottomOf="@+id/iv_4"/>

        <ImageView
            android:id="@+id/iv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/me"
            app:layout_constraintTop_toTopOf="@id/h_two4"
            app:layout_constraintBottom_toBottomOf="@id/h_two5"
            app:layout_constraintLeft_toRightOf="@id/iv_4"
            app:layout_constraintRight_toRightOf="@id/v_three2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="#444444"
            app:layout_constraintLeft_toLeftOf="@+id/iv_5"
            app:layout_constraintRight_toRightOf="@+id/iv_5"
            app:layout_constraintTop_toBottomOf="@+id/iv_5"/>



        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/h_two3"
            app:layout_constraintBottom_toBottomOf="@id/h_two4"
            app:layout_constrainedHeight="true"
            android:scrollbars="none">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/long_photo"
                />
        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>