<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment_Sport">

    <!-- TODO: Update blank fragment layout -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_one"
        android:layout_width="match_parent"
        android:layout_height="200dp"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="fragment sport" />


    <Button
        android:id="@+id/frgmt0_buttontest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过接口调用Activity" />

    <Switch
        android:id="@+id/switch_nocall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="免打扰" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_audio_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="播放" />

        <Button
            android:id="@+id/button_audio_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="暂停" />

        <Button
            android:id="@+id/button_audio_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止" />
    </LinearLayout>

</LinearLayout>