<resources>

    <!-- Base application theme. -->
    <!-- style name="AppTheme" parent=""Theme.AppCompat.Light.NoActionBar"-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityTheme2" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/activityBackground</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ButtonStyle" >
        <item name="android:textColor">@color/buttonColor1</item>
        <item name="android:background">@color/buttonBackgroundColor1</item>
    </style>

</resources>
