<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--刻度显示一半-->
    <item
        android:left="10dp"
        android:top="5dp"
        >
        <rotate
            android:fromDegrees="90"
                android:pivotX="50%"
                android:pivotY="50%">
            <shape
                android:shape="line">
                <!--图形颜色-->
                <solid android:color="#141414"/>

                <!--图形半径-->
                <stroke
                    android:width="1dp"/>


                <size android:width="10dp"
                    android:height="10dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>