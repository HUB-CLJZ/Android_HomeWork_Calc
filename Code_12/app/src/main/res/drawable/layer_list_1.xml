<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 第1层 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ACAFAE" />
        </shape>
    </item>

    <!-- 第2层 -->
    <item
        android:top="25dp"   android:bottom="65dp" android:left="55dp"   android:right="5dp"   >
        <rotate
            android:fromDegrees="5"
            android:pivotX="0"
            android:pivotY="0">
            <shape android:shape="rectangle" >
                <solid android:color="#646866" />
            </shape>
        </rotate>
    </item>

    <!-- 第3层 -->
    <item
        android:top="-45dp"   android:bottom="120dp" android:left="265dp"   android:right="-135dp"   >
        <rotate
            android:fromDegrees="35"
            android:pivotX="0"
            android:pivotY="0">
            <shape android:shape="rectangle" >
                <solid android:color="#ACAFAE" />
            </shape>
        </rotate>
    </item>

    <!-- 第4层-->
    <item
        android:top="25dp"   android:bottom="50dp" android:left="25dp"   android:right="55dp"   >
        <shape android:shape="rectangle" >
            <solid android:color="#FAF7F7" />
        </shape>
    </item>

</layer-list>