<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--被选中时是1dp的底部边线-->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#8f8f8f"/>
                </shape>
            </item>

            <item android:bottom="1dp"
                android:top="1dp"
                android:left="1dp"
                android:right="1dp">
                <shape>
                    <solid android:color="#fff"/>
                </shape>
            </item>

        </layer-list>
    </item>

    <!--未被选中的是1dp的底部边线-->
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#8f8f8f"/>
                </shape>
            </item>

            <item android:bottom="1dp"
                android:top="1dp"
                android:left="1dp"
                android:right="1dp">
                <shape>
                    <solid android:color="#8f8f8f"/>
                </shape>
            </item>

        </layer-list>
    </item>

</selector>